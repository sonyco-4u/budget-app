<div class="resend">
  <%= form_for(resource, as: resource_name, data: {turbo: false}, url: confirmation_path(resource_name), html: { method: :post }) do |f| %>
    <div class="menu-bar">
      <%= render partial: 'shared/home]', locals: { title: 'CONFIRMATION EMAIL', back_path: root_path } %>
      <%= f.submit "Resend", { class: "actions"} %>
    </div>

    <%= f.email_field :email, autofocus: true, autocomplete: "email", value: (resource.pending_reconfirmation? ? resource.unconfirmed_email : resource.email), placeholder: "Email", class: "resend_input" %>
    <%= render "devise/shared/error_messages", resource: resource %>
  <% end %>

  <%= render "devise/shared/links" %>
</div>